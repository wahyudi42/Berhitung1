<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#1e88e5</item>
        <item name="colorPrimaryDark">#1565c0</item>
        <item name="colorAccent">#42a5f5</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Main">
        <item name="android:background">#90caf9</item>
    </style>
    <style name="HeaderTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">15dp</item>
    </style>
    <style name="MainMenuA">
        <item name="android:gravity">center</item>
        <item name="android:background">#42a5f5</item>
        <item name="android:padding">15dp</item>
    </style>
    <style name="MainMenuB">
        <item name="android:gravity">center</item>
        <item name="android:background">#2196f3</item>
        <item name="android:padding">15dp</item>
    </style>
    <style name="MateriBerhitung">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="SoalTextStyle">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="HasilJawaban">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#1565c0</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
